<script>
// jQuery
var $container = jQuery('#content');
// initialize
$(document).ready(function() {
	$container.packery({
	  itemSelector: '.item',
	  columnWidth: ".itemsizer",
	  rowHeight: 1,
	  gutter: 0
	});
	$container.layout();
	$(window).trigger('resize');
});
