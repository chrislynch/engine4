# Make sure we can put sites live using symlinks
Options +FollowSymLinks

# Hide some important file types from external access
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|sqlite)$">
Order Allow,Deny
Deny from all
</FilesMatch>

# Rewrite all the links and send them to engine4 to process
<IfModule mod_rewrite.c>
  RewriteEngine on
  # Rewrite URLs of the form 'x' to the form 'index.php?q1=x'.
  RewriteCond %{REQUEST_FILENAME} !-f
  # RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !=/favicon.ico
  # RewriteRule ^_data/ - [NC,F,L]
  # RewriteRule ^_e/ - [NC,F,L]
  RewriteRule ^(.*)$ index.php?q1=$1 [L,QSA]
</IfModule>
